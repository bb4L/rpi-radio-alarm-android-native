<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/nav_host_fragment"
    android:layout_weight="0.6"
    android:orientation="vertical"
    android:stateListAnimator="@null"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.recyclerview.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view"
    android:name="com.rpi_radio_alarm.rpi_radio_alarm_native.ui.alarms.AlarmsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".ui.alarms.AlarmsFragment"
    tools:listitem="@layout/fragment_alarm" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createAlarmFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:baselineAlignBottom="true"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/colorPrimary"
        android:contentDescription="Add alarm button" />


</RelativeLayout>
